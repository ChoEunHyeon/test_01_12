<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/our_background">

    <TextView
        android:text="소개"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_s_1"
        android:background="@color/our_green"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:padding="1dp"
        android:elevation="6dp"
        android:gravity="center" />
    <TextView
        android:text="연간 계획"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_s_2"
        android:background="#ffffff"
        android:textSize="20dp"
        android:padding="1dp"
        android:elevation="6dp"
        android:gravity="center" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text=" 2017 연간 계획"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:src="@drawable/project_plan_table1"
            android:scaleType="fitXY"
            android:layout_height="450dp"
            android:layout_width="match_parent"
            android:foregroundGravity="center"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:layout_marginBottom="@dimen/magazine_bottom_margin"
            android:layout_marginRight="@dimen/magazine_right_margin"
            android:background="#ffffff"
            android:layout_marginLeft="@dimen/magazine_left_margin"
            android:layout_marginTop="@dimen/magazine_top_margin" />

        <ImageView
            android:src="@drawable/project_plan_table2"
            android:scaleType="fitXY"
            android:layout_height="450dp"
            android:layout_width="match_parent"
            android:foregroundGravity="center"
            android:clickable="true"
            android:background="#ffffff"
            android:layout_marginBottom="@dimen/magazine_bottom_margin"
            android:layout_marginRight="@dimen/magazine_right_margin"
            android:layout_marginLeft="@dimen/magazine_left_margin"
            android:layout_marginTop="@dimen/magazine_top_margin" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>