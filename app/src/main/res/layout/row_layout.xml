<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/our_background">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/magazine_top_margin"
    android:layout_marginBottom="@dimen/magazine_bottom_margin"
    android:layout_marginLeft="@dimen/magazine_left_margin"
    android:layout_marginRight="@dimen/magazine_right_margin"
    android:background="@color/our_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016 spring"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:textColor="#000000"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.CardView
        app:cardElevation="4dp"
        android:layout_width="wrap_content"
        android:elevation="5dp"
        android:padding="20dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/radius"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/spring"
            android:scaleType="fitXY"
            android:id="@+id/flag"
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:foregroundGravity="center"
            android:background="@drawable/girl"
            android:layout_alignParentStart="true"
            android:clickable="true"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이건 2016 Spring이에요!!"
        android:textSize="15dp"
        android:id="@+id/card_text"
        android:textColor="#000000"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</LinearLayout>
</RelativeLayout>